  <Stats
    stats={[
      { title: 'Members', amount: '0' },
      { title: 'Partnerships', amount: '0' },
      { title: 'Affiliates', amount: '0' },
      { title: 'Donors', amount: '0' },
    ]}
  /> ****************** -->

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Donate',
        href: 'https://taoprgrams@gmail.com',
        target: '_blank',
        icon: 'tabler:download',
      },
    ]}
  >
    <Fragment slot="title">
     Together As&nbsp;&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">One</span>
    </Fragment>

    <Fragment slot="subtitle">
      The smallest donations will surely make a huge impact in aiding our cause. We appreciate you!
    </Fragment>
  </CallToAction>
</Layout>
